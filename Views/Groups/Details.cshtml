@model HouseworkManager.Models.Group

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 0;
}

<h1>Details</h1>

<div>
    <h4>Group</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AdministratorID)
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.Administrator.UserName
        </dd>
    </dl>
</div>

<div>
    <h4 class="mt-4">Members</h4>
    <hr />
    @if (ViewBag.GroupMembers == null || ViewBag.GroupMembers.Count == 0)
    {
        <div>No Member</div>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        No
                    </th>
                    <th>
                        User Name
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.groupMembers)
                {
                    <tr>
                        <td>
                            @(i += 1)
                        </td>
                        <td>
                            @item.User.UserName 
                        </td>
                        <td>
                            <a asp-controller="GroupMembers" asp-action="Edit" asp-route-id="@item.GroupMemberID">Edit</a> |
                            <a asp-controller="GroupMembers" asp-action="Delete" asp-route-id="@item.GroupMemberID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    
    <div>
        <button type="button" class="btn btn-info"><a class="nav-link" asp-controller="GroupMembers" asp-action="Create" asp-route-groupId="@Model?.GroupID">Add Member</a></button> | 
        <a asp-action="Index">Back to List</a>
    </div>
</div>
