@model HouseworkManager.Models.GroupMember

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>GroupMember</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GroupID" class="control-label"></label>
                <select asp-for="GroupID" class="form-control" asp-items="ViewBag.GroupID" value="@ViewBag.DetailsGroupID" disabled></select>
                <!-- post group id as hidden item since the select box is disable state -->
                <input type="hidden" asp-for="GroupID" value="@ViewBag.DetailsGroupID" />
            </div>
            <div class="form-group">
                <label asp-for="UserID" class="control-label"></label>
                <select asp-for="UserID" class="form-control" asp-items="ViewBag.UserID" value="@ViewBag.LoginUserID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-info mt-2" />
            </div>
        </form>
    </div>
</div>

<div class="mt-2">
    <a asp-controller="Groups" asp-action="Details" asp-route-id="@ViewBag.DetailsGroupID">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
